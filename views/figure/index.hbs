<div class="container text-center mt-3 mb-3">
   <table class="table table-danger">
      <tr>
         <th>
            <a class="btn btn-info" href="/figure/add">Add</a>
            <a class="btn btn-primary" href="/plush">Plush List</a>
         </th>
         <th colspan="6">
            <h1 class="text text-danger">FIGURE LIST</h1>
         </th>
         <th colspan="3">
            <form action="/figure/search" method="post">
               <input class="form-control" type="search" name="keyword" placeholder="Search by name">
            </form>
         </th>
         </th>
      </tr>
      <tr>
         <th colspan="5">
            <a class="btn btn-success" href="/figure/sort/price/asc">Sort By Price ascending</a>
         </th>
         <th colspan="5">
            <a class="btn btn-success" href="/figure/sort/price/desc">Sort By Price descending</a>
         </th>
      </tr>
      <tr>
         <th>Name</th>
         <th>Image</th>
         <th>Price</th>
         <th>Quantity</th>
         <th>Color</th>
         <th>Category</th>
         <th>Brand</th>
         <th>Description</th>
         <th colspan="2">Action</th>
      </tr>
      {{#each figure }}
      <tr>
         <td>{{ name }}</td>
         <td>
            <a href="/figure/detail/{{_id}}">
               <img src="{{ image }}" width="100" height="100">
            </a>
         </td>
         <td>{{ price }}$</td>
         <td>{{ quantity }}</td>
         <td>{{ color }}</td>
         <td>{{ category }}</td>
         <td>{{ brand }}</td>
         <td>{{ description }}</td>
         <td>
            <a class="btn btn-warning" href="/figure/edit/{{ _id }}">Edit</a>
            <a class="btn btn-danger" href="/figure/delete/{{ _id }}"
               onclick="return confirm('Are you sure to delete this ?');">Delete</a>
         </td>
      </tr>
      {{/each}}
   </table>
   <style>
      img {
         height: auto;
         width: auto;
      }
   </style>
</div>

