<div class="container col-md-6 mt-3 mb-3 card bg-light">
   <form action="/figure/add" method="post">
      <h1 class="text text-success text-center text-uppercase mt-3">Add new Figure</h1>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Full name</label>
         <input class="form-control" type="text" name="name" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Image</label>
         <input class="form-control" type="url" name="image" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Price</label>
         <input class="form-control" type="number" name="price" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Quantity</label>
         <input class="form-control" type="number" name="quantity" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Category</label>
         <select class="form-control" name="category">
            <option value="Anime">Anime</option>
            <option value="Game">Game</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Brand</label>
          <select class="form-control" name="brand">
            <option value="Bandai">Bandai</option>
            <option value="Mihoyo">Mihoyo</option>
            <option value="Kokomi">Kokomi</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Description</label>
         <input class="form-control" type="text" name="description" required>
      </div>
       <div class="form-group mt-3"> <label class="h5 text text-success" for="">Color</label>  
            <input type="radio" value="red" id="red" name="color" class="btn btn-primary">
            <label for="red">red</label><br>
            <input type="radio" value="green" id="green" name="color" class="btn btn-primary">
            <label for="green">green</label><br>
            <input type="radio" value="pink" id="pink" name="color" class="btn btn-primary">
            <label for="pink">pink</label><br>     
      </div>
      <div class="form-group text-center mt-3 mb-3">
         <input class="btn btn-primary" type="submit" value="Add">
      </div>
   </form>
</div>
<style>
   body{
      background-color: pink;
   }
</style>